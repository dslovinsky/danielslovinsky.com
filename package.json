{
  "name": "danielslovinsky.com",
  "description": "Daniel Slovinsky's personal site",
  "license": "MIT",
  "version": "2.1.1",
  "author": {
    "name": "Daniel Slovinsky",
    "url": "https://danielslovinsky.com/"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "next",
    "build": "next build",
    "serve": "next start -p 5000",
    "clean": "rm -rf .next",
    "prod": "NODE_ENV=production next start",
    "lint": "eslint . --fix",
    "format": "prettier --write  --log-level silent \"src/**/*.{js,jsx,ts,tsx,mdx}\"",
    "types:check": "tsc --noEmit",
    "codegen": "DOTENV_CONFIG_PATH=.env graphql-codegen -r dotenv/config",
    "refresh": "curl -X GET 'http://localhost:3000/api/revalidate-all'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@apollo/client": "^4.0.11",
    "@apollo/client-integration-nextjs": "^0.14.3",
    "@designbycode/tailwindcss-text-stroke": "^1.3.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "datocms-structured-text-utils": "^5.1.7",
    "dotenv": "^17.2.3",
    "graphql": "^16.12.0",
    "next": "16.1.1",
    "nodemailer": "^7.0.12",
    "react": "19.2.3",
    "react-datocms": "^7.2.4",
    "react-dom": "19.2.3",
    "rxjs": "^7.8.2",
    "validator": "^13.15.26"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@graphql-codegen/cli": "^6.1.0",
    "@graphql-codegen/typescript": "^5.0.7",
    "@graphql-codegen/typescript-operations": "^5.0.7",
    "@graphql-codegen/typescript-react-apollo": "^4.3.4",
    "@next/env": "16.1.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@types/validator": "^13.15.10",
    "class-variance-authority": "^0.7.1",
    "cssnano": "^7.1.2",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-inline-styles": "^1.0.5",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mdx}": [
      "eslint --fix",
      "prettier --write --log-level silent"
    ]
  },
  "packageManager": "pnpm@10.18.2",
  "pnpm": {
    "overrides": {
      "@types/react": "19.2.7",
      "@types/react-dom": "19.2.3"
    }
  }
}
