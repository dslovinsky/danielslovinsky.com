{
  "name": "danielslovinsky.com",
  "description": "Daniel Slovinsky's personal site",
  "license": "MIT",
  "version": "2.0.0",
  "author": {
    "name": "Daniel Slovinsky",
    "url": "https://danielslovinsky.com/"
  },
  "scripts": {
    "dev": "next",
    "build": "next build",
    "serve": "next start -p 5000",
    "prod": "NODE_ENV=production next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.mdx --fix",
    "format": "prettier --write  --log-level silent \"src/**/*.{js,jsx,ts,tsx,mdx}\"",
    "check-types": "tsc --noEmit",
    "codegen": "DOTENV_CONFIG_PATH=.env graphql-codegen -r dotenv/config",
    "refresh": "curl -X GET 'http://localhost:3000/api/revalidate-all'"
  },
  "dependencies": {
    "@apollo/client": "^3.8.1",
    "@apollo/experimental-nextjs-app-support": "^0.4.1",
    "@sendgrid/mail": "^7.7.0",
    "graphql": "^16.8.0",
    "next": "^13.4.19",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/typescript-react-apollo": "^3.3.7",
    "@next/env": "^13.4.19",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "autoprefixer": "^10.4.15",
    "cssnano": "^6.0.1",
    "eslint": "^8.47.0",
    "eslint-config-next": "^13.4.19",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-no-inline-styles": "^1.0.5",
    "eslint-plugin-no-relative-import-paths": "^1.5.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "postcss": "^8.4.28",
    "prettier": "^3.0.2",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mdx}": [
      "eslint --fix",
      "prettier --write --loglevel silent"
    ]
  }
}
